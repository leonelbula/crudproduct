{% extends 'base.html.twig' %}

{% block title %} {{ title }}{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {% if edit is defined %}
            <h2>Editar Producto</h2>
        {% else %}
            <h2>Nuevo Producto</h2>
        {% endif %}
        <hr>
        <a href="{{ path('app_product')}}" class="btn btn-warning">
            cancelar
        </a>

        <div class="row">
            
            {{ form(form) }}

        </div>


    </div>
{% endblock %}
