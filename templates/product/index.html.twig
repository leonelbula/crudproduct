{% extends 'base.html.twig' %}

{% block title %}{{ title}}{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Lista de Productos</h1>
        <hr>
        <a href="{{ path('new_product') }}" class="btn btn-success">
            Nuevo Producto
        </a>
        <hr>

        <div class="row">
            <table class="table table-striped producto" id="table_product">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Codigo</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Marca</th>
                        <th scope="col">Precio</th>
                        <th scope="col">accion</th>
                    </tr>
                </thead>

                <tbody>
                    {% for product in product_list %}

                        <tr>
                            <th scope="row">{{ product.id }}</th>
                            <td>{{ product.code }}</td>
                            <td>{{ product.name }}</td>
                            <td>{{ product.description }}</td>
                            <td>{{ product.brand }}</td>
                            <td>{{ product.price }}</td>
                            <td>
                                <a href="{{ path('detail_producto', {'id':product.id}) }}" class="btn btn-primary btn-sm" >Ver</a>
                                <a href="{{ path('edit_producto', {'id':product.id}) }}" class="btn btn-warning btn-sm" >Editar</a>
                                <a idProducto="{{ product.id }}" class="btn btn-danger btn-sm btnEliminar" >Eliminar</a>
                            </td>
                        </tr>

                    {% endfor %}


                </tbody>
            </table>

        </div>

    </div>
    <script>
        $(document).ready(function () {
            $('#table_product').DataTable();
        });

    </script>
{% endblock %}
